<BorderPane prefHeight="897.0" prefWidth="1427.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.soft1841.sm.controller.MainController">
    <top>
        <AnchorPane prefHeight="80.0" style="-fx-background-color: #289fd6;" styleClass="green-theme">
